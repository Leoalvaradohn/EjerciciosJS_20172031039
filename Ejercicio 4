//4. Cree una función que reciba 3 argumentos numéricos y retorne el numero más alto.

const encontrarNumeroMasAlto = (num1, num2, num3) => {
  // Usar el operador ternario para comparar los números y retornar el más alto
  return (num1 >= num2 && num1 >= num3) ? num1 :
         (num2 >= num1 && num2 >= num3) ? num2 : num3;
};

// Ejemplo de uso:
console.log(encontrarNumeroMasAlto(10, 5, 15)); // Debería devolver 15
console.log(encontrarNumeroMasAlto(100, 250, 150)); // Debería devolver 250
console.log(encontrarNumeroMasAlto(-10, -5, -15)); // Debería devolver -5
